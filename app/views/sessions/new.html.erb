<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.submit "Sign in", class: "btn btn-primary col-sm-3" %>
		<% end %>
		<p class="col-sm-12">New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>